{
    "manifest_version": 3,
    "name": "YouTube Enhanced",
    "description": "Experience YouTube the way you want to. Greatly improves configuration options for YouTube.",
    "version": "1.7.0",
    "permissions": ["contextMenus", "tabs", "nativeMessaging", "storage", "scripting", "activeTab"],
    "host_permissions": ["https://*.youtube.com/*"],
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "css": ["css/youtube.css"]
        }
    ],
    "background": {
        "service_worker": "build/background.js"
    },
    "action": {
        "default_title": "YouTube Enhanced",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "/images/icon-16.png",
        "48": "/images/icon-48.png",
        "128": "/images/icon-128.png"
    }
}